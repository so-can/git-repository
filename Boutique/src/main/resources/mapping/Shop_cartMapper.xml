<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.Shop_cartMapper">

    <resultMap id="ShopResultMap" type="com.example.unifyEntity.ShoppingCart">
        <result column="sc_id" javaType="Integer"  property="shoppingCartId" />
        <result column="u_id" javaType="Integer" property="userId" />
        <result column="t_num" javaType="Integer" property="number" />
    </resultMap>

    <select id="SelectById" parameterType="Integer" resultMap="ShopResultMap">
        select * from shop_cart where u_id = #{id}
    </select>
    <select id="findAll"  parameterType="Integer" resultMap="ShopResultMap">
        select * from shop_cart where u_id = #{id}
    </select>
    <delete id="DeleteById" parameterType="Integer">
        delete from shop_cart where u_id=#{id}
    </delete>
    <update id="Update" parameterType="Integer" >

    </update>


</mapper>
